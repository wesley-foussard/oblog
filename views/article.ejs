<%- include ('partials/header.ejs')%>
      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <div class="pure-g">
          <article class="post pure-u-1">
            <header>
              <h1><%= foundArticle.title%>></h1>
              <div class="post-meta">
                Par <a href="#"><%= foundArticle.author%></a> 
                dans la catégorie <a href="#"><%= foundArticle.category%></a>
              </div>
            </header>
            <figure class="post-picture">
              <img class="pure-img" src="/images/<%=foundArticle.img %>" alt=`<%=foundArticle.img_alt%>`>
              <figcaption class="post-picture-caption">Des bulles et des points virgules</figcaption>
            </figure>
            <div class="post-content">
              <p><%=foundArticle.text%></p>
            </div>
            <footer>
              <a class="pure-button" href="/">Retour à l'accueil</a>
            </footer>
          </article>
        </div>
      </main>
    </div>
  </body>
</html>